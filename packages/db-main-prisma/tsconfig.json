{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "lib": ["esnext"],
    "module": "CommonJS",
    "noEmit": false,
    "incremental": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src",
    "composite": true,
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["**/node_modules", "**/.*/", "./dist", "./build"]
}
