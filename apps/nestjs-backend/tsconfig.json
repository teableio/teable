{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "CommonJS",
    "noEmit": false,
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/db-main-prisma" },
    { "path": "../../packages/sdk" }
  ],
  "exclude": ["**/node_modules", "**/.*/", "dist"]
}
